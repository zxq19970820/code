SELECT
	c.id cartid,
	c.uid,
	c.pcount,
	p.id pid,
	p.pname,
	p.pprice,
	p.pinventory,
	p.picon,
	p.plocation,
	p.pviews
FROM
	cart c,
	product p,
	cartpro cp
WHERE
	cp.pid = p.id
	AND cp.cartid = c.id
	AND c.uid = #{uid}

