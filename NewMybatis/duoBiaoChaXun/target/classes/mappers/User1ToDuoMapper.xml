<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxq.mapper.User1ToDuoMapper">

    <resultMap id="map" type="com.zxq.domain.User1ToDuo">
        <id property="id" column="id"></id>
        <result property="address" column="address"></result>
        <result property="birthday" column="birthday"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="sex" column="sex"/>
        <result property="phoneNumber" column="phoneNumber"/>
        <result property="email" column="email"/>
        <result property="userState" column="userState"/>

        <collection property="account1ToDuos" ofType="com.zxq.domain.Account1ToDuo">
            <id property="id" column="id"/>
            <result property="uid" column="uid"/>
            <result property="money" column="money"/>
        </collection>
    </resultMap>

    <select id="SelectAllUser" resultMap="map">
        select a.id,a.money,a.uid,u.*
        from user  u
        left join account a
        on u.id=a.uid
    </select>
</mapper>