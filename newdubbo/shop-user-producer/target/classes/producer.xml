<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

        <dubbo:application name="producer"  ></dubbo:application>

        <!-- 使用multicast广播注册中心暴露服务地址 -->
    <!--    指定注册中心地址-->
        <dubbo:registry address="zookeeper://127.0.0.1:2181" ></dubbo:registry>

        <!-- 用dubbo协议在20880端口暴露服务 -->
        <dubbo:protocol name="dubbo" port="20880" />

        <!-- 声明需要暴露的服务接口 -->
        <dubbo:service interface="com.zxq.shopinterface.UserService" ref="UserService" timeout="1200000"/>

        <!-- 和本地bean一样实现服务 -->
        <bean id="UserService" class="com.zxq.service.UserServiceImpl" />

    <dubbo:application name=""/>
    <dubbo:registry address="zookeeper://127.0.0.1"/>
    <dubbo:protocol name="dubbo" port="20880"/>
    <dubbo:service interface="com.zxq.shopinterface.UserService" ref="UserService"/>
    <bean id="UserService" class="com.zxq.service.UserServiceImpl"/>


</beans>
